{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "lib": ["es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "jest-test.setup.ts", "src/__tests__/document-import.bacl.back"],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "src/**/__tests__/*",
    "src/test"
  ],
  "typeAcquisition": {
    "include": ["jest"]
  }
}
